---
/*
  Resume Page
  Displays resume with PDF download option.
*/

import Page from '../layouts/Page.astro';

const experience = [
  {
    title: "DevSecOps Engineer",
    company: "Prymo",
    period: "Recent",
    description: "AWS architecture, infrastructure automation, and security implementation for cloud-native applications."
  },
  {
    title: "Infrastructure Engineer",
    company: "Lightwave",
    period: "Previous",
    description: "Healthcare data infrastructure with focus on compliance and security monitoring."
  },
  {
    title: "Systems Administrator",
    company: "GCB Bank",
    period: "Previous",
    description: "Banking systems administration with emphasis on security and reliability."
  }
];

const certifications = [
  "AWS Certified Solutions Architect â€“ Associate",
  "AWS Certified Cloud Practitioner",
  "CompTIA Security+ CE",
  "Google Cybersecurity Certificate"
];

const skills = {
  "Cloud & Infrastructure": ["AWS", "Terraform", "Kubernetes", "Docker"],
  "Security": ["SIEM", "SAST/DAST", "Vulnerability Assessment", "Incident Response"],
  "CI/CD": ["GitLab CI/CD", "Security Scanning", "Automated Deployment"],
  "Programming": ["Python", "Bash", "Machine Learning"]
};
---

<Page title="Resume" description="Clinton Senaye's professional resume - DevSecOps Engineer specializing in AI Security.">
  <article class="resume-page">
    <div class="container">
      <header class="page-header">
        <div class="header-content">
          <div class="header-text">
            <h1 class="page-title">Resume</h1>
            <p class="page-subtitle">
              DevSecOps Engineer | AI Security
            </p>
          </div>
          <a href="/resume.pdf" class="btn btn-primary download-btn" download>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="btn-icon">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Download PDF
          </a>
        </div>
      </header>

      <div class="resume-content">
        <!-- Summary -->
        <section class="resume-section">
          <h2 class="section-title">Summary</h2>
          <p class="summary-text">
            DevSecOps Engineer with experience securing infrastructure across banking, healthcare,
            and cloud-native environments. Currently pursuing MSc in Computing with focus on
            ML-based security, transitioning into AI Security to address emerging threats in
            machine learning systems.
          </p>
        </section>

        <!-- Experience -->
        <section class="resume-section">
          <h2 class="section-title">Experience</h2>
          <div class="experience-list">
            {experience.map(job => (
              <div class="experience-item">
                <div class="experience-header">
                  <h3 class="job-title">{job.title}</h3>
                  <span class="job-period">{job.period}</span>
                </div>
                <p class="job-company">{job.company}</p>
                <p class="job-description">{job.description}</p>
              </div>
            ))}
          </div>
        </section>

        <!-- Education -->
        <section class="resume-section">
          <h2 class="section-title">Education</h2>
          <div class="education-list">
            <div class="education-item">
              <h3 class="degree">MSc Computing (Internet Technology & Security)</h3>
              <p class="school">In Progress</p>
              <p class="thesis">Dissertation: ML-Based Anomaly Detection in DevSecOps Pipelines</p>
            </div>
            <div class="education-item">
              <h3 class="degree">BSc Computer Science</h3>
              <p class="school">Ghana Institute of Management and Public Administration</p>
            </div>
          </div>
        </section>

        <!-- Skills -->
        <section class="resume-section">
          <h2 class="section-title">Skills</h2>
          <div class="skills-grid">
            {Object.entries(skills).map(([category, items]) => (
              <div class="skill-group">
                <h3 class="skill-category">{category}</h3>
                <div class="skill-tags">
                  {items.map(skill => (
                    <span class="skill-tag">{skill}</span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </section>

        <!-- Certifications -->
        <section class="resume-section">
          <h2 class="section-title">Certifications</h2>
          <ul class="cert-list">
            {certifications.map(cert => (
              <li class="cert-item">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="cert-icon">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                  <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
                {cert}
              </li>
            ))}
          </ul>
        </section>
      </div>

      <footer class="resume-footer">
        <p class="footer-note">
          For the complete resume with full details, please download the PDF version.
        </p>
        <a href="/resume.pdf" class="btn btn-primary" download>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="btn-icon">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          Download PDF
        </a>
      </footer>
    </div>
  </article>
</Page>

<style>
  .resume-page {
    padding: var(--space-12) 0 var(--space-20);
  }

  /* Header */
  .page-header {
    margin-bottom: var(--space-12);
  }

  .header-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  @media (min-width: 640px) {
    .header-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .page-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-2);
  }

  .page-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }

  .download-btn {
    flex-shrink: 0;
  }

  .btn-icon {
    width: 1rem;
    height: 1rem;
  }

  /* Content */
  .resume-content {
    max-width: var(--content-width);
  }

  .resume-section {
    margin-bottom: var(--space-10);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--color-border);
  }

  .resume-section:last-child {
    border-bottom: none;
  }

  .section-title {
    font-size: var(--text-lg);
    margin-bottom: var(--space-4);
    color: var(--color-accent);
    font-family: var(--font-mono);
  }

  /* Summary */
  .summary-text {
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  /* Experience */
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .experience-header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-2);
    margin-bottom: var(--space-1);
  }

  .job-title {
    font-size: var(--text-base);
    font-weight: 600;
  }

  .job-period {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  .job-company {
    font-size: var(--text-sm);
    color: var(--color-accent);
    margin-bottom: var(--space-2);
  }

  .job-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  /* Education */
  .education-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .degree {
    font-size: var(--text-base);
    font-weight: 600;
    margin-bottom: var(--space-1);
  }

  .school {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .thesis {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
    margin-top: var(--space-1);
  }

  /* Skills */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--space-4);
  }

  @media (min-width: 640px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .skill-category {
    font-size: var(--text-sm);
    font-weight: 600;
    margin-bottom: var(--space-2);
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .skill-tag {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  /* Certifications */
  .cert-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .cert-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .cert-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--color-accent);
    flex-shrink: 0;
  }

  /* Footer */
  .resume-footer {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .footer-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  /* Print Styles */
  @media print {
    .download-btn,
    .resume-footer {
      display: none;
    }

    .resume-section {
      page-break-inside: avoid;
    }
  }
</style>
