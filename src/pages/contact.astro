---
/*
  Contact Page
  Contact form and professional links.
  Form works with Netlify Forms when deployed to Netlify.
*/

import Page from '../layouts/Page.astro';

const socialLinks = [
  {
    name: "GitHub",
    href: "https://github.com/clintonsenaye",
    description: "Check out my code and projects",
    icon: "github"
  },
  {
    name: "LinkedIn",
    href: "https://linkedin.com/in/clintonsenaye",
    description: "Connect professionally",
    icon: "linkedin"
  },
  {
    name: "Email",
    href: "mailto:clintonsenaye@gmail.com",
    description: "clintonsenaye@gmail.com",
    icon: "email"
  }
];
---

<Page title="Contact" description="Get in touch with Clinton Senaye for AI Security opportunities, DevSecOps consulting, or collaboration.">
  <article class="contact-page">
    <div class="container">
      <header class="page-header">
        <h1 class="page-title">Get in Touch</h1>
        <p class="page-subtitle">
          Interested in AI security, DevSecOps, or just want to connect? I'd love to hear from you.
        </p>
      </header>

      <div class="contact-content">
        <div class="contact-main">
          <!-- Contact Form -->
          <section class="form-section">
            <h2 class="section-title">Send a Message</h2>
            <form
              name="contact"
              method="POST"
              data-netlify="true"
              netlify-honeypot="bot-field"
              class="contact-form"
            >
              <!-- Honeypot field for spam prevention -->
              <p class="hidden">
                <label>
                  Don't fill this out if you're human: <input name="bot-field" />
                </label>
              </p>
              <input type="hidden" name="form-name" value="contact" />

              <div class="form-group">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="form-input"
                  required
                  autocomplete="name"
                />
              </div>

              <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-input"
                  required
                  autocomplete="email"
                />
              </div>

              <div class="form-group">
                <label for="subject" class="form-label">Subject</label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  class="form-input"
                  required
                />
              </div>

              <div class="form-group">
                <label for="message" class="form-label">Message</label>
                <textarea
                  id="message"
                  name="message"
                  class="form-textarea"
                  required
                  rows="5"
                ></textarea>
              </div>

              <button type="submit" class="btn btn-primary submit-btn">
                Send Message
              </button>
            </form>
          </section>
        </div>

        <aside class="contact-sidebar">
          <!-- Social Links -->
          <section class="links-section">
            <h2 class="section-title">Connect</h2>
            <ul class="social-list">
              {socialLinks.map(link => (
                <li>
                  <a
                    href={link.href}
                    class="social-link"
                    target={link.icon !== 'email' ? '_blank' : undefined}
                    rel={link.icon !== 'email' ? 'noopener noreferrer' : undefined}
                  >
                    <div class="social-icon">
                      {link.icon === 'github' && (
                        <svg viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                      )}
                      {link.icon === 'linkedin' && (
                        <svg viewBox="0 0 24 24" fill="currentColor">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                      )}
                      {link.icon === 'email' && (
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                          <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                      )}
                    </div>
                    <div class="social-info">
                      <span class="social-name">{link.name}</span>
                      <span class="social-description">{link.description}</span>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          </section>

          <!-- Availability -->
          <section class="availability-section">
            <h2 class="section-title">Availability</h2>
            <p class="availability-text">
              Currently open to AI Security roles, DevSecOps consulting, and research collaborations.
              Based in the UK, open to remote opportunities worldwide.
            </p>
          </section>
        </aside>
      </div>
    </div>
  </article>
</Page>

<style>
  .contact-page {
    padding: var(--space-12) 0 var(--space-20);
  }

  .page-header {
    margin-bottom: var(--space-12);
    max-width: var(--content-width);
  }

  .page-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-3);
  }

  .page-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }

  /* Layout */
  .contact-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
  }

  @media (min-width: 768px) {
    .contact-content {
      grid-template-columns: 1fr 320px;
    }
  }

  .section-title {
    font-size: var(--text-lg);
    margin-bottom: var(--space-6);
    color: var(--color-accent);
    font-family: var(--font-mono);
  }

  /* Form */
  .contact-form {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
  }

  .hidden {
    display: none;
  }

  .submit-btn {
    width: 100%;
  }

  /* Sidebar */
  .contact-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  /* Social Links */
  .social-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: inherit;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .social-link:hover {
    border-color: var(--color-text-muted);
    box-shadow: var(--shadow-sm);
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .social-icon svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .social-info {
    display: flex;
    flex-direction: column;
  }

  .social-name {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .social-description {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  /* Availability */
  .availability-section {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
  }

  .availability-section .section-title {
    margin-bottom: var(--space-3);
  }

  .availability-text {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }
</style>
